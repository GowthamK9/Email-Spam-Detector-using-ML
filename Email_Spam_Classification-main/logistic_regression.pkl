import pickle
from sklearn.feature_extraction.text import TfidfVectorizer
from sklearn.linear_model import LogisticRegression

# Sample training data
X_train = ["Win a free iPhone", "Click here for cash", "Hello, how are you?", "Meeting at 10 AM"]
y_train = [1, 1, 0, 0]  # 1 = Spam, 0 = Not Spam

# Train vectorizer
vectorizer = TfidfVectorizer()
X_train_transformed = vectorizer.fit_transform(X_train)

# Train model
model = LogisticRegression()
model.fit(X_train_transformed, y_train)

# Save vectorizer and model
with open("feature_extraction.pkl", "wb") as vec_file:
    pickle.dump(vectorizer, vec_file)

with open("logistic_regression.pkl", "wb") as model_file:
    pickle.dump(model, model_file)

print("âœ… Model and vectorizer saved successfully!")
